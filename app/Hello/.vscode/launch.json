    "version": "0.2.0",
    "configurations": [
        {
            "cwd": "${workspaceRoot}",

            // 构建后生成的可执行文件路径
            "executable": "./build/hello.elf",
            "name": "Debug with OpenOCD",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",

            // openocd配置文件，根据实际使用的芯片型号及stlink版本去选择
